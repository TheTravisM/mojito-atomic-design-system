<div class="c-promo {{promoClassModifier}} {{promoMediaAlign}} {{backgroundColor}}">
    <article class="c-promo_container l-container">
        <aside class="c-promo_aside">
            <figure class="c-promo_figure">
                <img class="c-promo_img" src="{{promoImgSrc}}" alt="{{promoImgAlt}}" />
                <figcaption class="c-promo_figcaption">
                    {{promoFigCaptionText}}
                </figcaption>
            </figure>
        </aside>
        <section class="c-promo_body">
            <header class="c-promo_header">
                <h3 class="c-promo_title">{{promoTitle}}</h3>
            </header>
            <div class="c-promo_copy">
                {{promoCopy}}
            </div>
            <footer class="c-promo_footer">
                <a class="c-btn {{buttonClass}}" href="">link text</a>
            </footer>
        </section>
    </article>
</div>
