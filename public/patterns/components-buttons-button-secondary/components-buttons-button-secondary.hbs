<{{#if buttonTag }}button{{/ if }}{{#if linkTag }}a href="{{ url }}"{{/ if }}
  class="c-btn {{ styleModifier }}" data-ui-component="c-btn"
  {{# buttonTitle}}title="{{ buttonTitle }}"{{/ buttonTitle}}
  {{# buttonIsToggle }} data-btn-icon-swap="{{ iconPath }}{{ buttonIconSwap }}"{{/ buttonIsToggle }}>

    <div class="c-btn__inner">

        {{#if buttonIcon }}
        <svg class="c-btn__icon {{#if buttonIsToggle }}js-btn-icon{{/ if }}">
            <use href="{{ iconPath }}#{{ buttonIcon }}"></use>
        </svg>
        {{/ if }}

        {{#if buttonText }}
        {{ buttonText }}
        {{/ if }}

    </div><!--end c-btn__inner-->

</{{#if buttonTag }}button{{/ if }}
{{#if linkTag }}a{{/ if }}><!-- end c-btn -->
