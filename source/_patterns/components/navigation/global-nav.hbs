<!-- Header Navigation-->
{{# GlobalNavigation}}
<nav id="c-global-navigation" class="c-global-nav">
    <ul class="c-global-nav_list">
        <!-- About -->
        <li class="c-global-nav_list-item">
            {{#if buttonTag }}
                <button
                    id="{{ listHeader }}-tab-btn"
                    class="c-global-nav_link c-global-nav_tab-btn {{ styleModifier }}"
                    data-toggle="tab"
                    role="tab"
                    aria-controls="{{ listHeader }}-tabpanel"
                    aria-selected="false">
                    {{ listHeader }}
                </button>
            {{/ if }}
            {{#if linkTag }}
                <a href="{{ url }}"
                   class="c-global-nav_link {{ styleModifier }}"
                   role="link">
                    {{ listHeader }}
                </a>
            {{/ if }}

            {{#if dropdown-list }}
                <ul class="c-global-nav_dropdown-list {{ styleModifier }}"
                    id="{{ listHeader }}-tabpanel"
                    tabindex="0"
                    role="tabpanel"
                    aria-labelledby="{{ listHeader }}-tab-btn"
                    aria-hidden="true">
                    <button
                            class="c-global-nav_back-btn"
                            data-toggle="tab"
                            role="tab"
                            aria-controls="{{ listHeader }}-tabpanel"
                            aria-selected="false"
                    >
                        Back
                        <span class="u-screen-reader-text">Toggle {{ listHeader }} Menu</span>
                    </button>
                    {{# dropdown-list }}
                        <li class="c-global-nav_dropdown-list-item {{ global-nav_item--modifier }}">
                            <a class="c-global-nav_dropdown-list-link"
                               href="{{url}}"
                               {{#if role}}role="{{ role }}"{{/if}}>
                                {{label}}
                            </a>
                        </li>
                    {{/ dropdown-list }}
                </ul>
            {{/ if }}<!-- End dropdown list -->
        </li><!-- END c-global-nav_list-item -->
    </ul>
</nav>
{{/GlobalNavigation}}


