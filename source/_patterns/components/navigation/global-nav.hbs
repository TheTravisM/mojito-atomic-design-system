<!--  Global Navigation -->
{{# GlobalNavigation }}
    <nav class="c-global-nav">
        <ul class="c-global-nav_list">
            {{# global-nav-list }}
                <li class="c-global-nav_list-item {{ styleModifier }}">
                {{#if link }}
                    <a class="c-global-nav_item-link {{ styleModifier }}"
                       href="{{ url }}"
                       role="link">
                        {{ label }}
                    </a>
                {{/ if}}
                {{# button }}
                    <button
                            id="{{ listHeader }}-tab-btn"
                            class="c-global-nav_link c-global-nav_tab-btn {{ styleModifier }}"
                            data-toggle="tab"
                            role="tab"
                            aria-controls="{{ listHeader }}-tabpanel"
                            aria-selected="false"
                    >
                        {{ listHeader }}
                    </button>
                {{/button}}
            </li>
            {{/ global-nav-list }}
        </ul>
    </nav>
