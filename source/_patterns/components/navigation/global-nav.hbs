<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        let tabBtn = $('.c-global-nav_tab-btn');
        let backBtn = $('.c-global-nav_back-btn');
        let tabPanels = $('.c-global-nav_dropdown-list');
        tabBtn.click(function () {
            // -- Tab Buttons -- //
            let activeTabBtn = $(this);
            tabBtn.removeClass('c-global-nav_tab-btn--active').attr('aria-selected', 'false');
            activeTabBtn.addClass('c-global-nav_tab-btn--active').attr('aria-selected', 'true');
            // -- Tab Panels -- //
            let activeTabPanel = $('#'+($(this).attr('aria-controls')));
            tabPanels.removeClass('ceng-tabs_panel--active').attr('aria-hidden', 'true');
            activeTabPanel.addClass('ceng-tabs_panel--active').attr('aria-hidden','false');
        });
        backBtn.click(function () {
            // -- Back Buttons -- //
            backBtn.removeClass('c-global-nav_tab-btn--active').attr('aria-selected', 'false');
            // -- Tab Panels -- //
            tabPanels.removeClass('ceng-tabs_panel--active').attr('aria-hidden', 'true');
        });
    });
</script>

<!-- GLOBAL Navigation -->
{{# GlobalNavigation}}
<nav id="c-global-navigation" class="c-global-nav">
    <ul class="c-global-nav_list">
        {{# global-nav-list}}
            <li class="c-global-nav_list-item">
                {{#if button }}
                    <button
                        id="{{ id }}-tab-btn"
                        class="c-global-nav_link c-global-nav_tab-btn {{ style-modifier }}"
                        data-toggle="tab"
                        role="tab"
                        aria-controls="{{ id }}-tabpanel"
                        aria-selected="false">
                        {{ listHeader }}
                        {{# if icon }}
                            <span class="c-btn_icon {{ icon-modifier }}">
                                {{icon-image}}
                            </span>
                        {{/ if }}
                    </button>
                {{/ if }}

                {{#if link }}
                    <a href="{{ url }}"
                       id="{{ id }}-tab-btn"
                       class="c-global-nav_link {{ style-modifier }}"
                       role="link">
                        {{ listHeader }}
                    </a>
                {{/ if }}



                {{#if dropdown-list }}
                    <ul class="c-global-nav_dropdown-list {{ style-modifier }}"
                        id="{{ id }}-tabpanel"
                        tabindex="0"
                        role="tabpanel"
                        aria-labelledby="{{ id }}-tab-btn"
                        aria-hidden="true">
                        <button
                                class="c-global-nav_back-btn"
                                data-toggle="tab"
                                role="tab"
                                aria-controls="{{ id }}-tabpanel"
                                aria-selected="false"
                        >
                            Back
                            <span class="u-screen-reader-text">Toggle {{ listHeader }} Menu</span>
                        </button>
                        {{# dropdown-list }}
                            <li
                               class="c-global-nav_dropdown-list-item {{ global-nav_item--modifier }}"
                                role="listitem"
                            >
                                {{# if heading}}
                                    <h3 id=""
                                        class="c-global-nav_dropdown-list-item c-global-nav_dropdown-title"
                                    >
                                        {{ label }}
                                    </h3>
                                {{/if}}

                                {{#if link}}
                                    <a id="{{ id }}"
                                       class="c-global-nav_dropdown-list-link"
                                       href="{{url}}"
                                       role="link">
                                        {{ label }}
                                    </a>
                                {{/if}}
                            </li>
                        {{/ dropdown-list }}
                    </ul>
                {{/ if }}<!-- End dropdown list -->
            </li><!-- END c-global-nav_list-item -->
        {{/ global-nav-list }}
    </ul>
</nav>
{{/ GlobalNavigation}}
